@model Entities.DTOs.ContactDetailDtoInsert
@{ ViewBag.Title = "Add a Contact Detail";}

<h2>Add a Contact Detail <a asp-action="Index" class="btn btn-sm btn-secondary">Back</a></h2>
<form asp-action="AddContactDetail" method="post">
    <div class="form-group">
        <label for="Name">ContactId:</label>
        <input class="form-control" name="ContactId" value="@ViewBag.ContactId" readonly />
    </div>
    <div class="form-group">
        <label for="TelephoneNumber">Telephone Number:</label>
        <input class="form-control" name="TelephoneNumber" />
    </div>
    <div class="form-group">
        <label for="EMailAddress">EMail Address:</label>
        <input class="form-control" name="EMailAddress" />
    </div>
    <div class="form-group">
        <label for="Address">Address:</label>
        <input class="form-control" name="Address" />
    </div>
    <div class="text-center panel-body">
        <button type="submit" class="btn btn-sm btn-primary">Add</button>
    </div>
</form>

@if (Model != null)
{
    <h2>Contact Detail (Recently Added)</h2>
    <table class="table table-sm table-striped table-bordered m-2">
        <thead>
            <tr>
                <th>ContactId</th>
                <th>Telephone Number</th>
                <th>EMail Address</th>
                <th>Address</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.ContactId</td>
                <td>@Model.TelephoneNumber</td>
                <td>@Model.EMailAddress</td>
                <td>@Model.Address</td>
            </tr>
        </tbody>
    </table>
}